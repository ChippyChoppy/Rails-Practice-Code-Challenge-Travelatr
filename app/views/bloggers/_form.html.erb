<%= form_for @blogger do |f| %>
    <% if flash[:blogger_errors] %>
        <% flash[:blogger_errors].each do |error| %>
            <%= error %>
        <% end %>
    <% end %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :bio %>
    <%= f.text_field :bio %>
    <%= f.label :age %>
    <%= f.text_field :age %>

    <%= f.submit %>
<%end %>